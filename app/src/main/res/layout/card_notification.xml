<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:elevation="24dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card_channel"
        android:padding="10dp">

        <TextView
            android:id="@+id/sqrSeenStatus"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/table_header_cell_bg"
            android:gravity="center"
            android:text="â– "
            android:textColor="@color/color_white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtNotifType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TYPE"
            android:layout_marginStart="5dp"

            android:textColor="@color/color_white"
            app:layout_constraintStart_toEndOf="@+id/sqrSeenStatus"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtNotifContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:text="[CONTENT CONTENT CONTENT CONTENT CONTENT CONTENT CONTENT CONTENT CONTENT CONTENT CONTENT CONTENT CONTENT CONTENT CONTENT CONTENT CONTENT CONTENT CONTENT CONTENT CONTENT  ]"
            android:textColor="@color/color_white"
            app:layout_constraintStart_toEndOf="@+id/sqrSeenStatus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNotifType" />

        <TextView
            android:id="@+id/txtNotifDandT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:text="Date @ Time"
            android:textColor="@color/color_white"
            app:layout_constraintStart_toEndOf="@+id/sqrSeenStatus"
            app:layout_constraintTop_toBottomOf="@+id/txtNotifContent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>