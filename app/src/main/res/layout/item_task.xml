<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"

    android:orientation="horizontal">

    <TextView
        android:id="@+id/sqrStage"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/table_header_cell_bg"
        android:gravity="center"
        android:text="â– "
        android:textColor="@color/color_white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtTaskName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/table_header_cell_bg"
        android:gravity="center"
        android:text="[TASK NAME]"
        android:textColor="@color/color_white"

        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtTaskAssignee"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/table_header_cell_bg"

        android:gravity="center"
        android:text="[ASSIGNEE]"
        android:textColor="@color/color_white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtTaskImportance"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/table_header_cell_bg"
        android:gravity="center"
        android:text="[IMPORTANCE]"

        android:textColor="@color/color_white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtTaskStage"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/table_header_cell_bg"
        android:gravity="center"

        android:text="[STAGE]"
        android:textColor="@color/color_white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtTaskCreator"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/table_header_cell_bg"

        android:gravity="center"
        android:text="[CREATOR]"
        android:textColor="@color/color_white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtTaskDueDate"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/table_header_cell_bg"

        android:gravity="center"
        android:text="[DUE DATE]"
        android:textColor="@color/color_white"
        android:textSize="18sp" />
</LinearLayout>